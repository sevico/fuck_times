$(function(){var o=500,a=$(window).height();$(window).scroll(function(){$(window).scrollTop()>a?$("#toTop").fadeIn(300):$("#toTop").fadeOut(300)}),$("#toTop").click(function(){$("html,body").animate({scrollTop:"0px"},o)});var r=$("img");i=r.offset().top-$(window).scrollTop(),0!=r.length&&i<=$(window).height()&&r.each(function(){var i=$(this).attr("data-src");if(void 0!=i||null!=i){if(-1!=i.indexOf("chinavrpark")){var o=i.replace("image.chinavrpark.com/news","img9.91huo.cn/vr/old");$(this).attr("data-src",o)}}else{var a=$(this).attr("src");if(-1!=a.indexOf("chinavrpark")){var r=a.replace("image.chinavrpark.com/news","img9.91huo.cn/vr/old");$(this).attr("src",r)}}})});